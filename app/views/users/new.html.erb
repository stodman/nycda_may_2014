<h1> Signup for MyBlog </h1>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :birthday %>
    <%= f.date_field :birthday %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>